{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2021"],
    "rootDir": "./src",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
